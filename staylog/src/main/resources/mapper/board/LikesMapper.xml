<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.staylog.staylog.domain.board.mapper.LikesMapper">


    <!--  해당 게시글(board_id) 좋아요 수 조회  -->
    <select id="countByBoardId" parameterType="long" resultType="int">
        SELECT count(*) AS likesCount
        FROM likes
        WHERE board_id = #{boardId}

    </select>




    <!-- 사용자 별 좋아요 여부 -->
    <select id="liked" parameterType="map" resultType="boolean">
        SELECT CASE WHEN EXISTS (
        SELECT 1 FROM likes
        WHERE board_id = #{boardId}
        AND user_id = #{userId}
        ) THEN 1 ELSE 0 END
        FROM dual
    </select>


    <!--  해당 게시글(board_id) 좋아요 목록 조회  -->
    <select id="selectAll" parameterType="long">
        SELECT like_id, user_id, board_id
        FROM likes
        WHERE board_id = #{boardId}
        ORDER BY like_id DESC
    </select>


    <!--  좋아요 취소  -->
    <delete id="deleteLike" parameterType="LikesDto">
        DELETE FROM likes
        WHERE user_id = #{userId}
            AND board_id = #{boardId}
    </delete>


    <!--  좋아요 등록  -->
    <insert id="addLike" parameterType="LikesDto">
        INSERT INTO likes
        (like_id, user_id, board_id)
        VALUES (
            seq_likes_id.NEXTVAL,
            #{userId},
            #{boardId}
        )
    </insert>





    <!-- 시퀀스 생성 likes

    CREATE SEQUENCE seq_likes_id
        START WITH 1
        INCREMENT BY 1;

    -->


<!-- 테이블 생성 likes

    CREATE TABLE likes (

        like_id		NUMBER	PRIMARY KEY,
        board_type	VARCHAR2(20)	NOT NULL,
        board_id	NUMBER	NOT NULL,
        user_id		NUMBER	NOT NULL,
        CONSTRAINT uq_likes_user_board UNIQUE (user_id, board_id)

    );

-->

</mapper>
