<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.staylog.domain.auth.mapper.BoardMapper">



<!-- 시퀀스 생성 board
    ![CDATA[<

    CREATE SEQUENCE seq_board_id
        START WITH 1
        INCREMENT BY 1;

    ]]>
-->


<!-- 테이블 생성 board
    ![CDATA[<

    CREATE TABLE board (

        board_id      NUMBER PRIMARY KEY,
        stay_id       NUMBER NOT NULL,
        booking_id    NUMBER UNIQUE,
        user_id       NUMBER NOT NULL,

        region        VARCHAR2(20) NOT NULL,
        board_type   VARCHAR2(20) NOT NULL,

        title         VARCHAR2(255) NOT NULL,
        content       CLOB NOT NULL,
        likes_count   NUMBER DEFAULT 0,
        rating        NUMBER CHECK (rating BETWEEN 1 AND 5),
        views_count   NUMBER DEFAULT 0,
        created_at    TIMESTAMP DEFAULT SYSTIMESTAMP,
        updated_at    TIMESTAMP DEFAULT SYSTIMESTAMP,
        deleted       CHAR(1) DEFAULT 'N' CHECK (deleted IN ('Y','N'))

    );

    ]]>
-->




</mapper>
