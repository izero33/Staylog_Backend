<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.staylog.staylog.domain.coupon.mapper.CouponMapper">

    <!-- 특정 유저의 모든 쿠폰 조회 -->
    <select id="getByUserId" parameterType="long" resultType="couponResponse">
        SELECT *
        FROM coupon
        WHERE user_id = #{userID}
    </select>

    <!-- 쿠폰 추가 -->
    <insert id="saveCoupon" parameterType="couponRequest">
        <selectKey keyProperty="couponId" resultType="long" order="BEFORE">
            SELECT seq_coupon_id
            FROM DUAL
        </selectKey>
        INSERT INTO coupon(coupon_id, user_id, coupon_type)
        VALUES(#{couponId}, #{userId}, #{couponType}
    </insert>

    <!-- 쿠폰 사용처리 -->
    <update id="useCoupon" parameterType="long">
        UPDATE coupon
        SET is_used = 'Y'
        WHERE coupon_id = #{couponId}
    </update>

    <!-- 쿠폰 삭제 -->
    <delete id="deleteCoupon" parameterType="long">
        DELETE FROM coupon
        WHERE coupon_id = #{couponId}
    </delete>

</mapper>