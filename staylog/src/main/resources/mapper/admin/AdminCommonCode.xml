<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.staylog.staylog.domain.admin.commonCode.mapper.AdminCommonCodeMapper">
	
    <!-- 코드명 목록 조회 -->
    <select id="selectCodeNameList" parameterType="string" resultType="AdminCommonCodeDto">
    	SELECT code_id, code_name
    	FROM common_code
    	WHERE use_yn = 'Y' AND (parent_id = #{codeId} OR code_id = #{codeId})
    	ORDER BY depth ASC, code_name ASC
	</select>
</mapper>
