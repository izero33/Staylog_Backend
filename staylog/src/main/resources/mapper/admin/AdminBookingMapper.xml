<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.staylog.domain.booking.mapper.AdminBookingMapper">
    <!--모든 예약 목록 조회-->
    <resultMap id="adminBookingResult" type="com.staylog.staylog.domain.admin.booking.dto.AdminBookingDto">
        <result property="bookingId" column="booking_id"/>
        <result property="userName" column="user_name"/>
        <result property="accommodationName" column="accommodation_name"/>
        <result property="roomName" column="room_name"/>
        <result property="checkInDate" column="check_in_date"/>
        <result property="checkOutDate" column="check_out_date"/>
        <result property="status" column="status"/>
    </resultMap>

    <select id="findAllBookings" resultMap="adminBookingResult">
        SELECT
            b.booking_id,
            u.name AS user_name,
            a.name AS accommodation_name,
            r.name AS room_name,
            b.check_in_date,
            b.check_out_date,
            b.status
        FROM bookings b
        JOIN users u ON b.user_id = u.user_id
        JOIN rooms r ON b.room_id = r.room_id
        JOIN accommodations a ON r.accommodation_id = a.accommodation_id
        ORDER BY b.created_at DESC
    </select>
</mapper>