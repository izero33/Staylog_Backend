<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.staylog.staylog.domain.admin.user.mapper.AdminUserMapper">

    <!-- 유저 목록 조회 -->
    <select id="findUsers" resultType="com.staylog.staylog.domain.admin.user.dto.AdminUserListDto"
    parameterType="com.staylog.staylog.domain.admin.user.dto.request.AdminUserListRequest">
        SELECT user_id,
        login_id,
        name,
        email,
        phone,
        role,
        status,
        gender,
        birth_date,
        profile_image,
        created_at,
        updated_at,
        last_login,
        withdrawn_at
        FROM users
        <where>
            <if test="role != null and role != ''">
                AND role = #{role}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
        ORDER BY user_id DESC
    </select>

    <!-- 유저 상세 조회 -->
    <select id="getUserDetail" parameterType="long" resultType="com.staylog.staylog.domain.admin.user.dto.AdminUserDetailDto">
        SELECT user_id,
               login_id,
               name,
               email,
               phone,
               role,
               status,
               gender,
               birth_date,
               profile_image,
               created_at,
               updated_at,
               last_login,
               withdrawn_at
        FROM users
        WHERE user_id = #{userId}
    </select>

    <!-- 유저 권한 변경 -->
    <update id="updateUserRole">
        UPDATE users
        SET role = #{role},
            updated_at = SYSTIMESTAMP
        WHERE user_id = #{userId}
    </update>

    <!-- 회원 상태 변경 -->
    <update id="updateUserStatus" >
        UPDATE users
        SET status = #{status},
            updated_at = SYSTIMESTAMP
        WHERE user_id = #{userId}
    </update>

    <!-- 전체 건수 조회 -->
    <select id="countUsers" resultType="int">
        SELECT COUNT(1)
        FROM users
        <where>
            <if test="role != null and role != ''">
                AND role = #{role}
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
    </select>

</mapper>
