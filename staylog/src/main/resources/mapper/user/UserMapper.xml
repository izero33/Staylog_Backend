<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.staylog.domain.user.mapper.UserMapper">

    <!-- 회원가입 (아직 연결 안함) -->
    <insert id="signupUser" parameterType="userDto">
        <selectKey keyProperty="userId" resultType="long" order="BEFORE">
            SELECT user_seq.NEXTVAL
            FROM DUAL
        </selectKey>
        INSERT INTO user(user_id, user_name, user_nickname, email, password, phone, birth_date, gender)
        VALUES(#{userId}, #{userName}, #{userNickname}, #{email}, #{password}, #{phone}, #{Birth_date}, #{gender})
    </insert>

    <!-- userId로 유저 정보 조회 -->
    <select id="getByUserId" parameterType="String" resultType="userDto">
        SELECT *
        FROM users
        WHERE user_id = #{userId}
    </select>

</mapper>
