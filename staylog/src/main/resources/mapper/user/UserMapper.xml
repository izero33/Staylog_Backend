<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.staylog.domain.user.mapper.UserMapper">

    <!-- userId로 유저 정보 조회 -->
    <select id="findByLoginId" parameterType="String" resultType="userDto">
        SELECT *
        FROM users
        WHERE user_id = #{userId}
    </select>

    <!-- userId로 유저 정보 조회 -->
    <select id="findByEmail" parameterType="String" resultType="userDto">
        SELECT *
        FROM users
        WHERE email = #{email}
    </select>

</mapper>
