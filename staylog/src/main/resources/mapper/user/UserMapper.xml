<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.staylog.staylog.domain.user.mapper.UserMapper">


    <!-- userId로 유저 정보 조회 -->
    <select id="findByUserId" parameterType="long" resultType="userDto">
        SELECT *
        FROM users
        WHERE user_id = #{userId}
    </select>

    <!-- loginId로 유저 정보 조회 -->
    <select id="findByLoginId" parameterType="String" resultType="userDto">
        SELECT *
        FROM users
        WHERE login_id = #{loginId}
    </select>

    <!-- email로 유저 정보 조회 -->
    <select id="findByEmail" parameterType="String" resultType="userDto">
        SELECT *
        FROM users
        WHERE email = #{email}
    </select>

    <!-- nickname으로 유저 정보 조회 -->
    <select id="findByNickname" parameterType="String" resultType="userDto">
        SELECT *
        FROM users
        WHERE nickname = #{nickname}
    </select>

    <!-- userId로 닉네임 조회 -->
    <select id="findNicknameByUserId" parameterType="long" resultType="String">
        SELECT nickname
        FROM users
        WHERE user_id = #{userId}
    </select>

</mapper>
