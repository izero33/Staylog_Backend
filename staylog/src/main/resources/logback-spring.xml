<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Spring Boot 기본 설정을 포함 -->
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <!-- 로그 패턴 -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%clr(%d{HH:mm:ss.SSS}){faint} %clr([%thread]){faint} %clr(%-5level){auto} %clr(%logger{36}){cyan} - %msg%n"/>

    <!-- 콘솔 출력
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>
     -->

    <!-- MyBatis SQL 로깅 -->
    <logger name="org.mybatis.spring.SqlSessionTemplate" level="DEBUG"/>
    <logger name="org.mybatis.spring.SqlSessionUtils" level="DEBUG"/>
    <logger name="org.apache.ibatis.logging" level="DEBUG"/>
    <logger name="com.staylog" level="DEBUG"/>

    <!-- JDBC SQL 디버깅 (SQL문, 실행시간) -->
    <logger name="jdbc.sqlonly" level="DEBUG"/>
    <logger name="jdbc.sqltiming" level="DEBUG"/>
    <logger name="jdbc.audit" level="INFO"/>
    <logger name="jdbc.resultset" level="INFO"/>

    <!-- 루트 로거
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
     -->

</configuration>
